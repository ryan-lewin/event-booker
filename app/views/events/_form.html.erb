<%= form_for(@event) do |f| %>
  <ul>
    <% @event.errors.full_messages.each do |error| %>
      <li><%= error %></li>
    <% end %>
  </ul>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, :class => "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, :class => "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :date %>
    <%= f.date_field :date %>
  </div>
  <div class="form-group">
    <%= f.label :owner_id %>
    <%= f.select(:owner_id, options_for_select(Owner.all.collect{ |o| [o.name, o.id] }, selected: @event.owner_id), prompt: "Please Select") %>

  </div>
  <div class="form-group">
    <%= f.submit "Submit", :class => "btn btn-dark" %>
  </div>
<% end %>
